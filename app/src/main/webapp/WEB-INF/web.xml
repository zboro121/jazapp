<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee    http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
    <display-name>JavaServerFaces</display-name>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.WEBAPP_RESOURCES_DIRECTORY</param-name>
        <param-value>/resources</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <!--<session-timeout>3600</session-timeout>-->
        <session-timeout>60</session-timeout>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <filter>
        <description>
        </description>
        <display-name>
            SecurityFilter
        </display-name>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>org.jaz.SecurityFilter</filter-class>
    </filter>

    <filter>
        <description>
        </description>
        <display-name>
            PermissionsFilter
        </display-name>
        <filter-name>PermissionsFilter</filter-name>
        <filter-class>org.jaz.PermissionsFilter</filter-class>
    </filter>

    <filter>
        <description>
        </description>
        <display-name>
            AuctionEditFilter
        </display-name>
        <filter-name>AuctionEditFilter</filter-name>
        <filter-class>org.jaz.AuctionEditFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PermissionsFilter</filter-name>
        <url-pattern>/categories/edit.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PermissionsFilter</filter-name>
        <url-pattern>/departments/edit.xhtml</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuctionEditFilter</filter-name>
        <url-pattern>/auctions/edit.xhtml</url-pattern>
    </filter-mapping>
</web-app>